<p class="text-info"><%= @title %></p>
<table class="table table-bordered table-condensed">
  <%= render :partial => "group", collection: @group_illegal_records %>
  <tr class="text-success">
    <td colspan="5">总扣分<%= @illegal_records.sum(&:point) %>, 总罚款<%= @illegal_records.sum(&:fine) %></td>
  </tr>
</table>

<h3>违法记录详情</h3>
<table class="table table-striped table-bordered table-condensed">
  <tr>
    <% @heads.each do |th| %>
      <th><%=th %></th>
    <% end %>
  </tr>

  <% @illegal_records.each do |record| %>
    <tr>
      <% record.to_array.each do |td| %>
        <td><%=td %></td>
      <% end %>
    </tr>
  <% end %>
</table>

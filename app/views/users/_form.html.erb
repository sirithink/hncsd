<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, '用户名', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password_digest, '密码', :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, :class => 'text_field' %>
      <% unless @user.new_record? %>
        <span class="help-inline">不填则不修改密码</span>
      <% end %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :super_admin, '管理员', :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :super_admin, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :allow_login, '允许登录', :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :allow_login, :class => 'check_box' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit '保存', :class => 'btn btn-primary' %>
    <%= link_to '返回',
                users_path, :class => 'btn' %>
  </div>
<% end %>
